<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.juxbzh.intlphoneinputsample.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default input (Mobile phone number)" />

    <net.rimoto.intlphoneinput.IntlPhoneInput
        android:id="@+id/intl_phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Styled via xml (Mobile phone number)" />

    <net.rimoto.intlphoneinput.IntlPhoneInput
        android:id="@+id/intl_phone_input2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textColor="#FF0000"
        app:textColorHint="#FFBBBB"
        app:countryNameColor="@color/colorPrimary"
        app:dialCodeColor="@color/colorAccent"
        app:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Land line number" />

    <net.rimoto.intlphoneinput.IntlPhoneInput
        android:id="@+id/intl_phone_input3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:phoneNumberType="LandLine" />
</LinearLayout>
