<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Spinner
        android:id="@+id/intl_phone_edit__country"
        android:layout_width="@dimen/spinner_width"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/spinner_min_height"
        android:dropDownWidth="@dimen/spinner_dropdown_width"
        android:paddingEnd="@dimen/component_default_spacing_small"
        android:paddingRight="@dimen/component_default_spacing_small"
        android:background="@null"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/intl_phone_edit__phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:singleLine="true"/>
</LinearLayout>