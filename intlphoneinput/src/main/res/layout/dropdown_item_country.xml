<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?android:attr/spinnerDropDownItemStyle"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:ellipsize="marquee"
    android:padding="@dimen/component_default_spacing_small">

    <ImageView
        android:id="@+id/intl_phone_edit__country__item_image"
        android:layout_width="@dimen/flag_size_small"
        android:layout_height="@dimen/flag_size_small"
        android:scaleType="fitCenter"
        android:contentDescription="@string/item_image_contentDescription"
        android:src="@drawable/country_il" />

    <TextView
        android:id="@+id/intl_phone_edit__country__item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/item_preview_country"
        android:textColor="?android:textColorPrimary" />

    <TextView
        android:id="@+id/intl_phone_edit__country__item_dialcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_preview_dialCode"
        android:textColor="?android:textColorHint" />
</LinearLayout>